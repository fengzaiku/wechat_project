
.scroll-hor{
    height: 300rpx;
    width: 100%;
    display: block;
    display: flex;
    white-space: nowrap;
    overflow: hidden;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.scroll-item{
    width:160rpx;
    margin: 10rpx;
    display: inline-block;
    height: 300rpx;
}
.scroll-item > image{
    width: 100%;
    height: 250rpx;
}
.scroll-item >view{
    font-size: 18rpx;
   line-height: 1.5;
   text-align: center;
   width: 100%;
}
.flex-box .scroll-item{
    width: 160rpx;
}
.item-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* height:40rpx; */
    width: 100%;
    font-size: 24rpx;
    padding:20rpx;
    box-sizing: border-box;
}
.item-title >image{
   width:25rpx;
   height:25rpx;
}
.flex-box{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content:flex-start;
    padding:0 20rpx;
 }

.list-result{
    display: flex;
    box-sizing: border-box;
    padding:20rpx 40rpx;
}
.list-result > image{
    width: 128rpx;
    height: 168rpx;
    margin-right: 20rpx;
}
.search-express{
    flex: 1;
}
.search-express > view{
    margin-bottom: 18rpx;
}
.search-title{
    font-size:28rpx;
    color:#333;
}
.search-subtitle:nth-child(2){
    font-size:20rpx;
    color:#ccc;
}
.search-subtitle:nth-child(3){
    font-size:24rpx;
    color:#999;
}
.search-pre{
    width: 40rpx;
    text-align: center;
    width:40rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    color:pink;
    padding:10rpx 0;
}
.search-list{
    height: 100vh;
    width: 100%;
    padding-top: 8vh;
    box-sizing: border-box;
}

.tips{
    font-size:28rpx;
    text-align:center;
    padding:50rpx;
    color:#ccc;
}
.tips view{
    display: flex;
    justify-content: center;
    font-size: 28rpx;
    line-height: 36rpx;
}
.tips image{
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}