.item-detail-image{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0.2;
}
.moveis-express{
    display: flex;
    flex-direction: column;
    padding:60rpx 50rpx;
    font-size: 1.5;
    width: 100%;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}
.moveis-express >image{
    width: 85%;
    height:800rpx;
    margin-bottom: 30rpx;
}
.title{
    font-size: 40rpx;
    color: #333;
}
.info{
    width:80%;
    font-size: 32rpx;
    color: #666;
    margin-top:20rpx;
    width:80%;
    display: flex;
    flex-direction: row;
}
.info text:nth-child(1){
    display: block;
    overflow: hidden;
}
.info text:nth-child(2){
    overflow: hidden;
    white-space: normal;
    word-wrap: break-word;
    word-break: break-all;
    max-width:80%;
}
.summary{
    width: 80%;
    margin: 30rpx auto;
    line-height:1.5;
}
.summary view:nth-child(1){
    font-size:32rpx;
    color:#333;
}
.summary view:nth-child(2){
    font-size:30rpx;
    color: #999;
    text-indent: 2em;
    padding-top: 30rpx;
}













